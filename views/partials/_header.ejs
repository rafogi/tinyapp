<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <% if(user_id){ %>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% } else { %>
        <a class="nav-item nav-link" href="/login">Create New URL</a>
          <% } %>
      </div>
    </div>
    <% if(!user_id){ %>
      <form method="get" action="/login">
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
      <form method="get" action="/register">
        <button type="submit" style="margin:25px" class="btn btn-primary">Register</button>
      </form>
      <% }else{ %>
        <form class="form-inline" action="/logout" method="POST">
        <h4 class="nav-item nav-link" style="margin-right:25px; color: white">logged in as <%=user_id.email%></h4>
        <button type="submit" class="btn btn-primary">logout</button>
    </form>
      <% } %>
  </nav>
</header>